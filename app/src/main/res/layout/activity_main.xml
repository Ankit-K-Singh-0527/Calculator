<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/modeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Scientific"
            android:textColor="@color/onSurface"
            android:textSize="16sp"
            android:alpha="0.8"/>

        <TextView
            android:id="@+id/degRadToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/degree"
            android:textColor="@color/accentYellow"
            android:textStyle="bold"
            android:padding="6dp"/>
    </LinearLayout>

    <!-- Display -->
    <LinearLayout
        android:id="@+id/displayBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/expressionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/onSurface"
            android:textSize="22sp"
            android:alpha="0.75"
            android:ellipsize="start"
            android:maxLines="2"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/resultView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/onSurface"
            android:textSize="40sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="start"
            android:paddingTop="6dp"/>
    </LinearLayout>

    <!-- Keypad: 7 rows x 5 columns using weights -->
    <LinearLayout
        android:id="@+id/keypad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/displayBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- helper row style: each row height = 0dp, weight=1 -->
        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.widget.Button style="@style/CalcButton.Clear" android:id="@+id/btnAC" android:text="AC"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnDel" android:text="DEL"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnAns" android:text="Ans"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnLParen" android:text="("
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnRParen" android:text=")"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnSin" android:text="sin"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnCos" android:text="cos"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnTan" android:text="tan"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnLog" android:text="log"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnLn" android:text="ln"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnSqrt" android:text="√"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnPow" android:text="^"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnFact" android:text="!"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnPi" android:text="π"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnE" android:text="e"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btn7" android:text="7"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btn8" android:text="8"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btn9" android:text="9"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnDiv" android:text="÷"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnPercent" android:text="%"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btn4" android:text="4"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btn5" android:text="5"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btn6" android:text="6"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnMul" android:text="×"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnNeg" android:text="+/-"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>

        <!-- Row 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btn1" android:text="1"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btn2" android:text="2"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btn3" android:text="3"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnSub" android:text="-"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btnCopy" android:text="COPY"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>

        <!-- Row 7 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btn0" android:text="0"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btnDot" android:text="."
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton" android:id="@+id/btnExp" android:text="EXP"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Operator" android:id="@+id/btnAdd" android:text="+"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <android.widget.Button style="@style/CalcButton.Equals" android:id="@+id/btnEq" android:text="="
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
